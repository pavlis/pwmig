#DIRS=`find * -type d \( ! -name SCCS ! -name CVS ! -name \*- ! -name TC.Cache ! -name .git -print \) -prune`
#
# alternative using subdirs
#
DIRS=`$(PWMIG)/bin/subdirs`
PWMIG_BASE=$(PWMIG)
DEST=$(PWMIG)

DBG=-g

LEX=flex -v

#CC=$(CC)

STOCKLIBS=-lcoords -lstock -ltt $(STOCKNEEDS) 

YFLAGS = -v -d -l 

XXFLAGS = -m64 -fPIC -fno-strict-aliasing -rdynamic -pipe -D_REENTRANT $(cxxflags)         -I$(PWMIG)/local/include -I$(PWMIG)/include -I$(XINCLUDE)
CCFLAGS = $(CXXFLAGS)
FFLAGS   = -m64   $(fflags) $(FEXTRA) -I$(PWMIG)/local/include -I$(PWMIG)/include -I$(XINCLUDE)
CFLAGS   = -m64 -fPIC -fno-strict-aliasing -rdynamic -pipe -Wall -std=gnu99 -D_REENTRANT -fstack-protector-all   $(cflags) $(CEXTRA) -I$(PWMIG)/local/include -I$(PWMIG)/include -I$(XINCLUDE) 

LDPATH=-L$(PWMIG)/local/lib -L$(PWMIG)/local/static -L$(PWMIG)/lib -L$(PWMIG)/static 
LDFLAGS= -m64 $(ldflags) $(LDEXTRA) $(LDPATH) $(LDRUN) 
LDLIBS= $(ldlibs) 


# This is for Macos and seems to be correct for linux as well
INSTALL=/usr/bin/install

# Trying to hack these to avoid teh mdirmake script in antelope.   Aug 2014
#all install :: FORCED
#	make  $(makeflags) $@ $(DIRS)
#
#clean Include :: FORCED
#	make $(makeflags) $@ $(DIRS)
# This is from dsapmake

all clean purge Include install tags :: FORCED
	@-DIRS="$(DIRS)" ;\
	for i in $$DIRS ; do \
                ( cd $$i && $(MAKE) $@ ; ) \
        done

OBJDIR=.
static ::
	$(RM) $(BIN) 
	$(MAKE) "LDFLAGS=$(ldflags) $(LDEXTRA) -L$(PWMIG)/static -L$(PWMIG)/local/static $(LDRUN) -ldl" $(BIN)
	@-for p in $(BIN) ; do \
	    echo $(INSTALL) $$p $(DEST)/bin ; \
	    $(INSTALL) $$p $(DEST)/bin ; \
        done

# Occasionally, when a filesystem fills, .make.state is corrupted
# and then make refuses to work because of the corrupt .make.state files.
# "make purge" fixes the problem, for directories below the current directory.

# ** must also be changed in toplevel Makefile ** 
purge :: FORCED
	-find . -type f \( \
	    -name .make.state \
	    -o -name .#\* \
	    -o -name .depends \
	    -o -name .depends.bak \
	    -o -name .optimize.dir \
	    -o -name .optimize.pag \
	    -o -name .optimize.db \
	    -o -name .%certify.\* \
	    -o -name .test.\*.er \
	    -o -name .pure.\* \
	    -o -name .man\* \
	    -o -name .dwarf\* \
	    -o -name \*.o \
	    -o -name \*- \
	    -o -name .make\* \
	    \) -print | xargs rm -f 
	-find . -type d -name SunWS_cache -print | xargs rm -f 
	-find . -type d -name \*.dSYM -print | xargs rm -rf 
	-$(RM) $(PURGE)

# purge removes a few other extra files also
#  .#* are cvs, 
#  .man* are fixman
# Be careful not to remove .no_optimizing

all:: ALL
	
clean ::
	@-$(RM) *.o *.a *.BAK *.dwarf
	@-$(RM) *.pyc
	@-$(RM) -rf *.dSYM
	@-$(RM) $(BIN) $(LIB) $(DLIB) $(CLEAN) .make.state tags 

Include::INCLUDE

install :: INCLUDE LIB BIN MAN 

MAN :: # dummy

relink ::
	@$(RM) $(BIN) $(LIB) $(DLIB) $(BUNDLE) ; $(MAKE) install

tags :: FORCED
	-ctags *.l *.y *.c *.pm *.pl *.sh *.f *.h 

ALL :  $(INCLUDE) $(LIB) $(DLIB) $(BIN) \
	$(MAN1) $(MAN2) $(MAN3) \
	$(MAN3F) $(MAN3H) $(MAN3O) $(MAN3P) $(MAN3T) $(MAN3Y) \
	$(MAN4) $(MAN5) $(MAN6) \
	$(MAN7) $(MAN8) $(MAN9) \
	$(MANL) 

BIN     :: $(BIN)      $(BIN:%=$(DEST)/bin/%) 
LIB     :: $(LIB)      $(DLIB) DLIB SLIB 
SLIB    :: $(LIB)      $(LIB:%=$(DEST)/static/%) 
DLIB    :: $(DLIB)     $(DLIB:%=$(DEST)/lib/%) 
BUNDLE  :: $(BUNDLE)   $(BUNDLE:%=$(DEST)/lib/%) 
INCLUDE :: $(INCLUDE)  $(INCLUDE:%=$(DEST)/include/%) 

 
$(DEST)/lib/%$(DSUFFIX) : %$(DSUFFIX)
	$(INSTALL) $< $(DEST)/lib
 
$(DEST)/lib/%.bundle : %.bundle
	$(INSTALL) $< $(DEST)/lib

$(DEST)/static/%.a : %.a
	$(INSTALL) $< $(DEST)/static
	$(RANLIB) $(DEST)/static/$<

$(DEST)/bin/% : %
	$(INSTALL) $< $(DEST)/bin

$(DEST)/include/% : %
	$(INSTALL) $< $(DEST)/include

$(DEST)/doc/$(DOCDIR)/% : % 
	$(INSTALL) $< $(DEST)/doc/$(DOCDIR)

$(DEST)/html/$(HTMLDIR)/% : % 
	$(INSTALL) $< $(DEST)/html/$(HTMLDIR)


FORCED :

dirs:
	@-echo directories: $(DIRS) | tr ' ' '\n'

#	Java rule

%.class: %.java
	javac $<

installMAN :: MAN

MAN :: $(MAN1:%=$(DEST)/man/man1/%) \
	$(MAN3:%=$(DEST)/man/man3/%) \
	$(MAN3F:%.3f=$(DEST)/man/man3f/%.3f) \
	$(MAN3H:%.3h=$(DEST)/man/man3h/%.3h) \
	$(MAN3O:%.3o=$(DEST)/man/man3o/%.3o) \
	$(MAN3P:%.3p=$(DEST)/man/man3p/%.3p) \
	$(MAN3T:%.3t=$(DEST)/man/man3t/%.3t) \
	$(MAN3Y:%.3y=$(DEST)/man/man3y/%.3y) \
	$(MAN5:%=$(DEST)/man/man5/%) \
	$(MAN6:%=$(DEST)/man/man6/%) \
	$(MAN7:%=$(DEST)/man/man7/%) \
	$(MAN8:%=$(DEST)/man/man8/%) \
	$(LMAN1:%=$(DEST)/local/man/man1/%) \
	$(LMAN3:%=$(DEST)/local/man/man3/%) \
	$(LMAN3F:%.3f=$(DEST)/local/man/man3f/%.3f) \
	$(LMAN3H:%.3h=$(DEST)/local/man/man3h/%.3h) \
	$(LMAN3O:%.3o=$(DEST)/local/man/man3o/%.3o) \
	$(LMAN3P:%.3p=$(DEST)/local/man/man3p/%.3p) \
