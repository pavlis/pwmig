DSUFFIX=.so.3

FC=gfortran
F77LIBS= -lc 

LD=$(CC)
DLD=$(CC) 

LDRUN=-Wl,-rpath,$(PWMIG)/local/lib -Wl,-rpath,$(PWMIG)/lib # -R$(PWMIG)/lib 
DLDFLAGS= $(ldflags) $(LDEXTRA) $(LDPATH) $(LDRUN) -shared -Wl,-soname,$@ 
DLDLIBS=$(ldlibs) 

CXX=$(CCC)	# c++ on linux, some may need g++
CXXAR=$(AR)
CXXDLD=$(CXX)

CXXARFLAGS=$(ARFLAGS)
CXXDLDFLAGS=$(DLDFLAGS)

LORDER=
TSORT=

X11=/usr/X11R6
X11LIBS=-L$(XLIB) -Wl,-rpath,$(XLIB) -lX11
XLIB=$(X11)/lib64 
XINCLUDE=$(X11)/include

X11_TK=$(X11)
X11LIBS_TK=$(X11LIBS)
XINCLUDE_TK=$(XINCLUDE)



LEXLIB= -lfl


TCLLDFLAGS = -L$(TCLLIB) -Wl,-rpath,$(TCLLIB) 
PYTHONLDFLAGS = -L$(PYTHONLIB) -Wl,-rpath,$(PYTHONLIB) 

OTCLLDFLAGS = -L$(OTCLLIB) -Wl,-rpath,$(OTCLLIB) 
OPYTHONLDFLAGS = -L$(OPYTHONLIB) -Wl,-rpath,$(OPYTHONLIB) 

AQTCLLDFLAGS = -L$(AQTCLLIB) -Wl,-rpath,$(AQTCLLIB) 
AQPYTHONLDFLAGS = -L$(AQPYTHONLIB) -Wl,-rpath,$(AQPYTHONLIB) 

THREAD=-pthread 
NSLLIBS = 
RYPT=-lcrypt
STOCKNEEDS=-ldl -lnsl -lm -lrt # -lz

ASFLAGS = 

RANLIB=ranlib

MAKE=make -ke --no-print-directory 


-include .depends

all ::

# This would be later antelope version method to set this
#DIRS=`$(PWMIG)/include/subdirs ${FIRSTDIRS}`
