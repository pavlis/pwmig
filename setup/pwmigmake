	fi
	@-if [ -d $(DEST)/data/$(DATADIR) ] ; then \
	    (cd $(DEST)/data/$(DATADIR) ; $(RM) -r $(DATA)) \
	fi
	@-if [ -d $(DEST)/data/pf ] ; then \
